@import 'style/weui.wxss';
@import 'style/guide.wxss';
page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  line-height: 1.6;
  font-family: -apple-system-font,Helvetica Neue,sans-serif;
  justify-content: flex-start;
  font-size: 28rpx;
}
.page__main {
  padding-top: 6rpx;
}
.page__sub {
  padding-top: 10rpx;
}

.page__hd {
  padding-top: 10rpx;
}
.page__bd {
  display: flex;
  flex-basis: 100%;
  justify-content: space-between;
  flex-flow: column nowrap;
  padding-bottom: 10rpx;
}
.page__bd_spacing {
  padding-left: 20rpx;
  padding-right: 20rpx;
}
.page__ac_spacing {
  padding-left: 40rpx;
  padding-right: 40rpx;
}
.page__ft{
  padding-bottom: 10rpx;
  text-align: center;
}

.page__title {
  text-align: center;
  font-size: 36rpx;
  font-weight: 400;
}

.page__desc {
  margin-top: 6rpx;
  color: #888888;
  text-align: left;
  font-size: 28rpx;
}
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}
