<view id="{{name}}">
<view  wx:if="{{showModalBox}}" class="place_box"></view>
<view wx:else class="weui-article__-2" bindtap="i_thumbnail">
  <view hidden="{{value}}">{{p}}:</view>
  <image src="{{csc=='img'? value.fileId : value}}" style="width: 100%;" mode="aspectFit"></image>
</view>
<view class="modal_box" bindtap="downModal" wx:if="{{showModalBox}}"></view>
<view animation="{{animationData}}" class="modal_attr_box" wx:if="{{showModalBox}}">
  <view class="modal_title">
    <view class='modal_sure_Btn' bindtap='fSave'>确定缩放比例{{cScale}}</view>
    <view class='modal_cancel_Btn' bindtap='downModal'>取消</view>
  </view>
  <view class="close_icon" bindtap="downModal">×</view>
  <view class='modal_content'>
    <movable-area style="width:{{xImage}}px;height:{{yImage}}px">
      <image  style="width:{{xImage}}px; height:{{yImage}}px;" mode="scaleToFit" src="{{editimg}}"></image>
      <movable-view style="height: {{yOff}}px; background-color: rgba(0,0,0,0.6); width: {{xOff}}px;" direction="all" bindchange="onChange" bindscale="onScale" scale-value="{{cScale}}">
      </movable-view>
    </movable-area>
    <input hidden="{{csc!='img'}}" name="explain" style="text-indent:2em;" value="{{value.e}}" placeholder="点击此处编辑"/>
    <view class="weui-footer__center">
      <canvas class="weui-canvas" style="width:300px;height:225px;" canvas-id="cei" disable-scroll="{{false}}"></canvas>
    </view>
  </view>
</view>
</view>
