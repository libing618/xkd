view {
  word-break: break-all;
  overflow: auto;
}
.rich-parse-inline {
  display: inline;
  margin: 0;
  padding: 0;
}
.rich-h1 {
  font-size: 36rpx;
  margin-bottom: .9em;
}
.rich-h2 {
  font-size: 32rpx;
  margin-bottom: .34em;
}
.rich-h3 {
  font-size: 30rpx;
  margin-bottom: .34em;
}
.rich-h4 {
  font-size: 28rpx;
  margin-bottom: .24em;
}
.rich-h5 {
  font-size: 26rpx;
  margin-bottom: .14em;
}
.rich-h6 {
  font-size: 24rpx;
  margin-bottom: .04em;
}
.rich-s0 {
  font-style: normal;
  font-weight: 400;
}
.rich-s1 {
  font-style: italic;
  font-weight: 400;
}
.rich-s2 {
  font-style: normal;
  font-weight: bolder;
}
.rich-s3 {
  font-weight: 400;
  font-style: normal;
  text-decoration: underline;
}
.rich-s4 {
  font-weight: bold;
  font-style: italic;
}
.rich-s5 {
  font-weight: bold;
  text-decoration: underline;
}
.rich-s6 {
  font-weight: bold;
  font-style: italic;
  text-decoration: underline;
}
.rich-s7 {
  font-style: italic;
  text-decoration: underline;
}
.rich-a0 {
  text-align: left;
}
.rich-a1 {
  text-align: center;
}
.rich-a2 {
  text-align: right;
}
