<import src="../../libs/impedit.wxml"/>
<view hidden="true"><input name="{{gname}}" value="{{c}}"/></view>
<view class="weui-cell">
  <view class="weui-cell__hd">材料(包装)</view>
  <view class="weui-cell__bd">内含数量</view>
  <view class="weui-cell__ft">单位</view>
</view>
<view class="weui-cell" wx:for="{{value}}" wx:key="index" bindtap="i_modalContent">
<view style="transform: translateX(-{{selectd==n ? translateX : 0}}rpx); transition: transform {{transitionTime/1000}}s;" id="ad-{{n}}" catchtouchstart="m_touchstart" catchtouchmove=" m_touchmove" catchtouchmove=" m_touchebd">
  <view class="wslider-left-item" wx:if="{{selectd==n}}" bindtap="fdeldata">删除</view>
  <view class="weui-cell__hd">{{item.material}}</view>
  <view class="weui-cell__bd">{{item.dOutput}}</view>
  <view class="weui-cell__ft">{{item.dUnit}}</view>
  <view class="wslider-left-item" wx:if="{{selectd==n}}" bindtap="fenins">插入</view>
</view>
</view>
<view class="modal_box" id="fBack" bindtap="f_modalContent"></view>
<view animation="{{animationData}}" class="modal_attr_box" wx:if="{{showModalBox}}">

    <view class="page__bd_spacing" id="{{targetId}}">
      <template is="i_sId" data="{{gname:'material', p:'材料(包装)', t:'sId',csc:'idname',c:content.material}}"></template>
      <template is="i_dg" data="{{gname:'dOutput', p:'内含数量', t:'dg',csc:'number',c:content.dOutput }}"></template>
      <template is="i_h4" data="{{gname:'dUnit', p:'单位', t:'dg',c:content.dUnit}}"></template>
    </view>
    <view style="padding-bottom:100rpx;"></view>
    <view class="page__ft weui-footer_fixed-bottom" id="{{dObjectId}}">
      <view wx:if="{{enMenu=='none' && uEV}}" class="modal_sure_Btn" bindtap="fSave">确定</view>
      <view wx:if="{{enMenu=='none' && targetId=='0'}}" class="modal_cancel_Btn" bindtap="downModal">返回</view>
    </view>
  <view hidden="{{enIns}}">
    <template is="m_insbottom"></template>
  </view>
</view>
